{
  "eslint.validate": [
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "javascript",
      "autoFix": true
    }
  ],
  "vetur.validation.template": false,
  // turn it off for JS
  "[javascript]": { "editor.formatOnSave": false },
  "eslint.autoFixOnSave": true,
  // those are for auto-fixs configs
  "prettier.stylelintIntegration": true,
  "editor.formatOnSave": true
}
